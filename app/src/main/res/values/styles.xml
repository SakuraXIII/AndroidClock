<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#1565C0</item>
        <item name="android:shadowColor">@color/white_shadow</item>
        <item name="android:shadowRadius">50.0</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/digitalfont</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="subTVStyle" parent="TextViewStyle">
        <item name="android:textSize">25sp</item>
    </style>
</resources>